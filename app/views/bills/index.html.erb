<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Description</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.client %></td>
        <td><%= bill.description %></td>
        <td><%= bill.due %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_bill_path %> <br>
<% if (Profile.all.length < 1) %>
<%= link_to 'Add Profile', new_profile_path %>
<% else %>
<%= link_to 'Edit Profile', edit_profile_path(Profile.first) %>
<% end %>
