<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><%= link_to 'Show', [item.bill, item] %></td>
    <td><%= link_to 'Edit', edit_bill_item_path(item.bill, item) %></td>
    <td><%= link_to 'Destroy', [item.bill, item], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

